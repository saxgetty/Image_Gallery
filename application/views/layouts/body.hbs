<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{{title}}</title>
        <link rel="stylesheet" type="text/css" href="../../public/css/bootstrap.min.css"> </linkrel>
        <link rel="stylesheet" type="text/css" href="../../public/css/{{css}}.css"> </linkrel>
        <script defer src="/public/js/frontend.js"></script>
    </head>
    <body>
        
        {{> header}}
        {{#if (emptyObject messages)}}
        {{> flashmessage}}
        {{/if}}
        {{{body}}}
        {{> footer}}
        

        {{#if logged}}
            <script>
                let ele = document.getElementById('logout-button');
                if (ele) {
                    ele.onclick = (event) => {
                        fetch('/users/logout', {
                            method: "POST"
                        }).then((data) => {
                            location.replace('/');
                        });
                    }
                }
            </script>
        {{/if}}
    </body>
</html>